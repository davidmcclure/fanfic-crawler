#!/usr/bin/env python


import click

from fanfic.models import BookId
from fanfic.jobs import crawl_metadata, crawl_chapters, crawl_reviews


@click.group()
def cli():
    pass


@cli.command()
def queue_metadata():
    for book_id in BookId.without_metadata():
        crawl_metadata.delay(book_id)


@cli.command()
def queue_chapters():
    for book_id in BookId.without_chapters():
        crawl_chapters.delay(book_id)


@cli.command()
def queue_reviews():
    for book_id in BookId.without_reviews():
        crawl_reviews.delay(book_id)


if __name__ == '__main__':
    cli()
